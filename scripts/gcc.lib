        ;;
    esac
}

install_gcc () {
    cd ${BTC_BUILD}
    test -e $1 && echo $1 already exists && return
    mkdir $1
    cd $1

    fortran=fortran
    case ${GCC_DIST} in
    gcc-[23].* ) fortran=f77 ;;
    esac

    locale_opt="--enable-clocale=gnu"
    case ${TARGET}- in
    *-uclinux-* ) locale_opt= ;;
    esac

    multilib_opt="--enable-multilib"
    case ${TARGET}- in
    x86_64-* | powerpc64-* ) multilib_opt="--disable-multilib" ;;
    esac

    CFLAGS="-O2 $HOST_CFLAGS" LDFLAGS="$(get_host_ldflags)" \
    ../${GCC_DIST}/configure \
    --prefix=${TC_PREFIX} --target=${TARGET} \
    ${GCC_CONFIG_OPTS} \
    $(get_gcc_cpu) \
    ${locale_opt} \
    ${multilib_opt} \
    --with-bugurl= \
    --with-pkgversion=btc \
    --with-gnu-ld \
    --with-gnu-as \
    --enable-threads=posix \
    --enable-languages=c,c++ \
    --enable-symvers=gnu \
    --enable-__cxa_atexit \
    --enable-shared \
    --disable-libstdcxx-pch

    make all
    manifest install_gcc make install

    rm -f ${TC_PREFIX}/lib/libiberty.a

    copy_license ${GCC_DIST}
}

get_gcc_arch_defs () {
    case ${TARGET} in
    alpha-* )
        echo " -D__WORDSIZE=64"
        ;;
    arm-* )
        echo " -D__ARM_EABI__"
        ;;
    mips-* | mipsel-* )
        echo " -D_ABIO32=1 -D_MIPS_SIM=_ABIO32 -D_MIPS_FPSET=16 -D_MIPS_ISA=1 -D_MIPS_SZINT=32 -D_MIPS_SZLONG=32 -D_MIPS_SZPTR=32 -D__WORDSIZE=32 -D__mips=1"
        ;;
    esac
}

get_target_cflags () {
    if [ -n "${DEFAULT_CPU:-}" ] ; then
        echo " -mcpu=${DEFAULT_CPU}"
    fi
}
